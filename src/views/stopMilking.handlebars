{{#if protocol}}
    <div class="treatment-container">       
        <h2>El protocolo de desleche es el siguiente:</h2>
            <ul>
                {{#each protocol.stopMilkingDays}}
                    <li>{{this}}</li>
                    <br>
                {{/each}}
            </ul>
        {{#if stopMilkingCalves}}
            <h2>Estos son los terneros que estan en desleche ahora mismo:</h2>  
            {{#each stopMilkingCalves}}
                <li>Ternero: {{this.name}}</li>
            {{/each}}
            {{else}}
            <h2>Actualmente no hay terneros en desleche</h2>
        {{/if}}
{{/if}}