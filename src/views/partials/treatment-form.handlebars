<div class="form-container">
  <h1>Nuevo Tratamiento</h1>
  <form action="/treatment/add" method="post">
    <label for="title">Nombre del Tratamiento:</label>
    <input type="text" id="title" name="title" required />

    <label for="medication">Medicamento:</label>
    <input type="text" id="medication" name="medication" required />

    <label for="duration">Duración(días en número):</label>
    <input type="number" id="duration" name="duration" required />

    <input class="form-button" type="submit" value="Guardar Tratamiento" />
  </form>
</div>